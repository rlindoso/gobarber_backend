{
  "name": "gobarber",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon src/server.js",
    "queue": "nodemon src/queue.js",
    "dev:debug": "nodemon --inspect src/server.js",
    "docker:create_postgres": "docker run --name go-barber-database -e POSTGRES_PASSWORD=docker -p 5432:5432 -d postgres",
    "docker:create_mongodb": "docker run --name mongobarber -p 27017:27017 -d -t mongo",
    "docker:create_redis": "docker run --name redisbarber -p 6379:6379 -d -t redis:alpine",
    "docker:create": "docker run --name go-barber-database -e POSTGRES_PASSWORD=docker -p 5432:5432 -d postgres && docker run --name mongobarber -p 27017:27017 -d -t mongo && docker run --name redisbarber -p 6379:6379 -d -t redis:alpine",
    "docker:start": "docker start go-barber-database && docker start mongobarber && docker start redisbarber",
    "db_migrate": "sequelize db:migrate"
  },
  "dependencies": {
    "@sentry/node": "5.11.1",
    "bcryptjs": "^2.4.3",
    "bee-queue": "^1.2.2",
    "cucumber": "^6.0.5",
    "date-fns": "^2.0.0-beta.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-handlebars": "^3.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.12",
    "multer": "^1.4.2",
    "nightwatch": "^1.3.2",
    "nightwatch-cucumber": "^9.1.3",
    "nodemailer": "^6.4.2",
    "nodemailer-express-handlebars": "^3.1.0",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "selenium-server": "^3.141.59",
    "sequelize": "^5.21.1",
    "youch": "^2.0.10",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "nodemon": "^1.19.4",
    "prettier": "^1.18.2",
    "sequelize-cli": "^5.5.1",
    "sucrase": "^3.10.1",
    "swagger-jsdoc": "^3.5.0",
    "swagger-ui-express": "^4.1.2"
  }
}
